doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Project name
		style.
			* {
				margin: 0;
				padding: 0;
			}
			body {
				font-family: Helvetica, Arial, sans-serif;
				padding: 20px 40px;
			}
			h1 {
				margin: 0 0 20px;
			}
			h2 {
				margin: 0 0 15px;
				font-weight: normal;
			}
			nav {
				font-size: 20px;
				line-height: 30px;
				margin: 0 0 30px;
			}
			li {
				list-style-type: none;
			}
			a {
				color: #2d83e4;
				text-decoration: underline;
			}
			a:hover,
			a:active {
				color: #ff5e5e;
			}
			a:visited {
				color: #d3d3d3;
			}

	body
		h1 Project Name
		h2 Pages
